{
    "scopeName": "inline.snipkit",
    "fileTypes": [],
    "injectionSelector": "L:meta.structure.array.json",
    "patterns": [
        {
            "include": "#snipkit-string"
        }
    ],
    "repository": {
        "snipkit-string": {
            "name": "snipkit.template.line",
            "contentName": "meta.embedded.inline.snipkit",
            "begin": "(\\s|\\[|\\,)(\")",
            "beginCaptures": {
                "1": { "name": "punctuation.quote.open"}
            },
            "end": "(\")(\\s|\\,|\\])",
            "endCaptures": {
                "0": { "name": "punctuation.quote.close"}
            },
            "patterns": [
                {
                    "include": "#snipkit-stop"
                }
            ]
        },
        "snipkit-stop": {
            "match": "\\$\\d",
            "name": "snipkit.tab.stop"
        }
    }
}