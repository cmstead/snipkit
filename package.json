{
    "name": "snipkit",
    "displayName": "SnipKit",
    "publisher": "cmstead",
    "description": "Enhanced snippet creation and editing for VS Code",
    "repository": {
        "type": "git",
        "url": "https://github.com/cmstead/snipkit.git"
    },
    "version": "0.4.0",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Other"
    ],
    "main": "./extension.js",
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "version-bump-patch": "node ./version-bump patch",
        "test": "mocha ./test/**/*.test.js && gittey commit"
    },
    "dependencies": {
        "json-ast": "^2.1.7"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "approvals": "^4.0.0-beta.1",
        "chai": "^4.3.4",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.4.0",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    },
    "public": true,
    "activationEvents": [
        "onCommand:cmstead.snipkit.indent",
        "onCommand:cmstead.snipkit.outdent",
        "onCommand:cmstead.snipkit.insertSnippet",
        "onCommand:cmstead.snipkit.pasteSnippet",
        "onCommand:cmstead.snipkit.formatAsBody"
    ],
    "contributes": {
        "commands": [
            {
                "command": "cmstead.snipkit.indent",
                "title": "SnipKit: Indent Lines",
                "description": "Indent selected body lines"
            },
            {
                "command": "cmstead.snipkit.outdent",
                "title": "SnipKit: Outdent Lines",
                "description": "Outdent selected body lines"
            },
            {
                "command": "cmstead.snipkit.insertSnippet",
                "title": "SnipKit: Insert Snippet",
                "description": "Insert snippet into document snippet document"
            },
            {
                "command": "cmstead.snipkit.pasteSnippet",
                "title": "SnipKit: Paste New Snippet",
                "description": "Paste snippet from clipboard into document"
            },
            {
                "command": "cmstead.snipkit.formatAsBody",
                "title": "SnipKit: Format Text as Snippet Body",
                "description": "Format selected text as a snippet body"
            }
        ],
        "keybindings": [
            {
                "command": "cmstead.snipkit.indent",
                "key": "ctrl+alt+]",
                "mac": "cmd+alt+]"
            },
            {
                "command": "cmstead.snipkit.outdent",
                "key": "ctrl+alt+[",
                "mac": "cmd+alt+["
            },
            {
                "command": "cmstead.snipkit.insertSnippet",
                "key": "ctrl+alt+s i",
                "mac": "cmd+alt+s i"
            },
            {
                "command": "cmstead.snipkit.pasteSnippet",
                "key": "ctrl+alt+s p",
                "mac": "cmd+alt+s p"
            },
            {
                "command": "cmstead.snipkit.formatAsBody",
                "key": "ctrl+alt+s f",
                "mac": "cmd+alt+s f"
            }
        ],
        "snippets": [
            {
                "language": "json",
                "path": "./snippets.json"
            },
            {
                "language": "jsonc",
                "path": "./snippets.json"
            },
            {
                "language": "snipkit",
                "path": "./snippets.json"
            }
        ],
        "languages": [
            {
                "id": "snipkit",
                "extensions": [
                    ".snipkit"
                ],
                "configuration": "./snipkit-language/snipkit.configuration.json"
            }
        ],
        "grammars": [
            {
                "scopeName": "inline.snipkit",
                "path": "./snipkit-language/snippet.tmLanguage.json",
                "injectTo": [
                    "source.json",
                    "source.jsonc"
                ],
                "embeddedLanguages": {
                    "meta.embedded.inline.snipkit": "snipkit"
                }
            }
        ]
    }
}